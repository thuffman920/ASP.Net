        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Teacher.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Teacher.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Teacher.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Teacher.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Teacher.Gender)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Teacher.Gender)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Teacher.Age)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Teacher.Age)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Teacher.IsLicensed)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Teacher.IsLicensed)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Teacher.YearsOfEmployment)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Teacher.YearsOfEmployment)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Teacher.IsNationalBoardCertified)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Teacher.IsNationalBoardCertified)
        </dd>
    </dl>
</div>
<br />
@if (Model.Classes != null)
{
    @for (int i = 0; i < Model.Classes.Count; i++)
    {
        <div style="display:grid;grid-template-columns:10% repeat(5, 1fr) 10%;">
            <h5 style="grid-column:2 / 6;">@Model.Classes[i].ClassroomName</h5>
            <hr style="grid-column:2 / 6;padding:0;margin:0;" />
            @if (Model.Students != null && Model.Students[i] != null)
            {
                @for (int j = 0; j < Model.Students[i].Count; j++)
                {
                    <label style="grid-column:@(((j % 4) + 2) + " / " + (((j + 1) % 4) + 2));grid-row:@((int)(i / 4));">@Model.Students[i][j]</label>
                }

            }
        </div>
        <br />
    }
}
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Teacher.TeacherID">Edit</a> |
