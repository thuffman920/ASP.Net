                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsLicensed)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.YearsOfEmployment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsNationalBoardCertified)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.TeacherID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.TeacherID">Details</a> |
