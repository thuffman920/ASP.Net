@page "{id:int?}"
@model DryRidgeProgramming.Pages.Users.EditModel

@{
    ViewData["Title"] = "Edit";
    Controllers.DRPConstructor drpC = new Controllers.DRPConstructor();
    drpC.SetSaltLine(Html.DisplayFor(model => model.User.SValue).ToString());
    drpC.SetNowTime(Model.User.LastModifiedDate);
}

<h1>Edit</h1>

<h4>User</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="User.UserID" />
            <div class="form-group">
                <label asp-for="User.UserName" class="control-label"></label>
                <input asp-for="User.UserName" class="form-control" value="@drpC.RebuildUser(Html.DisplayFor(model => model.User.UserName).ToString())" />
                <span asp-validation-for="User.UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.Password" class="control-label"></label>
                <input asp-for="User.Password" class="form-control" />
                <span asp-validation-for="User.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.FirstName" class="control-label"></label>
                <input asp-for="User.FirstName" class="form-control" />
                <span asp-validation-for="User.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.LastName" class="control-label"></label>
                <input asp-for="User.LastName" class="form-control" />
                <span asp-validation-for="User.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.Email" class="control-label"></label>
                <input asp-for="User.Email" class="form-control" />
                <span asp-validation-for="User.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.NumOfTickets" class="control-label"></label>
                <input asp-for="User.NumOfTickets" class="form-control" />
                <span asp-validation-for="User.NumOfTickets" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.NumOfRequests" class="control-label"></label>
                <input asp-for="User.NumOfRequests" class="form-control" />
                <span asp-validation-for="User.NumOfRequests" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.LastModifiedDate" class="control-label"></label>
                <input asp-for="User.LastModifiedDate" class="form-control" />
                <span asp-validation-for="User.LastModifiedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.AccountProfileColorBack" class="control-label"></label>
                <input type="color" asp-for="User.AccountProfileColorBack" class="form-control" />
                <span asp-validation-for="User.AccountProfileColorBack" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.AccountProfileColorFront" class="control-label"></label>
                <input type="color" asp-for="User.AccountProfileColorFront" class="form-control" />
                <span asp-validation-for="User.AccountProfileColorFront" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./UserIndex">Back to List</a>
</div>

@section Scripts {
    <script>
        alert("I am trying to load javascript.");
        alert(@Html.Raw(Model.User.LastModifiedDate));
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
